@using ProductsAndCategories.Models
@model Product

<h1 style="text-align: center;">Welcome to Products and Categories</h1>
<h2 style="text-align: center;">
    Products | <a href="/categories">Categories</a>
</h2>

<h3 style="text-align: center;">New Product</h3>

<form asp-action="CreateProduct" asp-controller="Home" method="post">
    <div class="form-group">
        <span style="color: red;" asp-validation-for="ProductName"></span>
        <label asp-for="ProductName" for="exampleInputEmail1">Product Name:</label>
        <input asp-for="ProductName" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter product name">
    </div>
    <div class="form-group">
        <span style="color: red;" asp-validation-for="Description"></span>
        <label asp-for="Description" for="exampleFormControlTextarea1">Description:</label>
        <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>
    <div class="form-group">
        <span style="color: red;" asp-validation-for="Price"></span>
        <label asp-for="Price" for="exampleInputEmail1">Price:</label>
        <input asp-for="Price" type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter price">
    </div>
    <p class="text-center"><button type="submit" class="btn btn-primary">Create</button></p>
</form>

<h3 style="text-align: center;">Existing Products</h3>
<div style="border: 2px solid black">
@foreach (var prod in @ViewBag.AllProducts)
{
    <h5 style="text-align: center; border: 1px dotted pink;"> <a href="/products/@prod.ProductId">@prod.ProductName</a> </h5> <br>
}
</div>